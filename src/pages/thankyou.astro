---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Thank You!";
const description = "Thank you for contacting The Shattered Crown. We have received your message.";
---

<BaseLayout title={pageTitle} description={description}>
  <main style="max-width:600px;margin:3rem auto 0 auto;padding:2rem 1rem;text-align:center;background:#222831;border-radius:10px;box-shadow:0 2px 16px #000a;">
    <div class="checkmark-anim" aria-hidden="true">
      <svg viewBox="0 0 52 52" width="80" height="80">
        <circle class="checkmark-circle" cx="26" cy="26" r="23.5" fill="none"/>
        <path class="checkmark-check" fill="none" d="M16 27l7 7l13-14"/>
      </svg>
    </div>
    <h1 style="color:#d49a2a;font-family:'Cinzel',serif;font-size:2.5rem;margin-bottom:1rem;">Thank You!</h1>
    <p style="font-size:1.2rem;color:#ccc;margin-bottom:2rem;">
      Your message has been received.<br />
      We appreciate you reaching out to us and will respond as soon as possible.
    </p>
    <a href="/" style="display:inline-block;margin-top:1.5rem;padding:0.75rem 2rem;background:#d49a2a;color:#222831;font-weight:700;border-radius:5px;text-decoration:none;transition:background 0.2s;">Return Home</a>
  </main>
  <style>
    .checkmark-anim {
      display: flex;
      justify-content: center;
      margin-bottom: 1.5rem;
    }
    .checkmark-circle {
      stroke: #d49a2a;
      stroke-width: 3;
      stroke-dasharray: 166;
      stroke-dashoffset: 166;
      animation: stroke 0.6s cubic-bezier(0.65,0,0.45,1) forwards;
    }
    .checkmark-check {
      stroke: #d49a2a;
      stroke-width: 4;
      stroke-linecap: round;
      stroke-dasharray: 48;
      stroke-dashoffset: 48;
      animation: stroke 0.4s 0.6s cubic-bezier(0.65,0,0.45,1) forwards;
    }
    @keyframes stroke {
      to {
        stroke-dashoffset: 0;
      }
    }
  </style>
</BaseLayout>