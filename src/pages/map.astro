---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Server Map  -  The Shattered Crown" description="Explore the world of The Shattered Crown with our interactive map. Discover new locations, player builds, and more!">
  <div class="map-container">
    <h1>Server Map</h1>
    <p>Explore the world of The Shattered Crown below!</p>
    <iframe
      src="http://map.theshatteredcrown.net:27002/"
      title="The Shattered Crown Live Map"
      width="90%"
      height="700"
      allowfullscreen
      loading="lazy"
    ></iframe>
  </div>
  <style>
    .map-container {
      text-align: center;
      margin-top: 2rem;
      margin-bottom: 4rem; /* Add extra space below the map */
    }
    .map-container iframe {
      display: block;
      margin: 2rem auto 0 auto;
      border: 2.5px solid #bfa046;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.18);
      max-width: 1200px;
      width: 90vw;
    }
  </style>
</BaseLayout>