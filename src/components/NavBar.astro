---
const { pathname } = Astro.url;
---

<nav style="
  background: #181c24;
  border-bottom: 2px solid #bfa046;
  padding: 0.5rem 0;
  font-family: 'Segoe UI', Arial, sans-serif;
  position: sticky;
  top: 0;
  z-index: 100;
">
  <style>
    .nav-inner {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
    }

    .nav-title {
      color: #bfa046;
      font-family: 'Cinzel', serif;
      font-size: 1.3rem;
      font-weight: bold;
      letter-spacing: 1px;
      margin-left: 1.5rem;
    }

    .hamburger {
      display: none;
      flex-direction: column;
      cursor: pointer;
      margin-right: 1.5rem;
      width: 32px;
      height: 32px;
      justify-content: center;
      position: relative;
    }

    .hamburger span {
      height: 4px;
      background: #bfa046;
      border-radius: 2px;
      transition: 0.3s;
      display: block;
      width: 100%;
      position: absolute;
      left: 0;
    }

    .hamburger span:nth-child(1) { top: 6px; }
    .hamburger span:nth-child(2) { top: 14px; }
    .hamburger span:nth-child(3) { top: 22px; }

    .nav-links {
      display: flex;
      gap: 0;
      list-style: none;
      margin: 0;
      padding: 0;
      background: none;
      border: none;
    }

    .nav-links > li {
      position: relative;
    }

    .nav-links > li > a,
    .nav-links > li > .dropdown > a {
      display: block;
      background: 
        linear-gradient(rgba(24,28,36,0.7), rgba(24,28,36,0.5)),
        url('/stone.png');
      background-size: 64px 64px;
      background-repeat: repeat;
      color: #ffe28a;
      font-family: 'Cinzel', serif;
      font-weight: bold;
      font-size: 1.1rem;
      padding: 0.7rem 2.2rem;
      border: 3px solid #bfa046;
      border-bottom: 5px solid #a07c2a;
      border-radius: 0.4rem 0.4rem 0 0;
      margin: 0;
      text-decoration: none;
      box-shadow: 0 2px 8px rgba(0,0,0,0.18) inset;
      transition: background 0.15s, color 0.15s, border-bottom 0.15s;
      position: relative;
    }

    .nav-links > li > a:hover,
    .nav-links > li > a.active,
    .nav-links > li.dropdown:hover > a {
      background: #bfa046;
      color: #23272f;
      border-bottom: 5px solid #ffe28a;
      box-shadow: 0 0 8px #ffe28a, 0 2px 8px rgba(0,0,0,0.15) inset;
    }

    /* ðŸŒŸ New universal link styles for both desktop and mobile */
    .nav-links a {
      color: #bfa046;
      text-decoration: none;
      font-weight: 500;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      transition: color 0.2s;
      position: relative;
      display: inline-block; /* Add this line */
    }

    .nav-links a:hover,
    .nav-links a.active {
      color: #bfa046;
      background: none;
    }
    .nav-links > li > a:hover::after,
    .nav-links > li > a.active::after {
      transform: scaleX(1);
    }

    /* ðŸ“± Mobile Navigation */
    @media (max-width: 700px) {
      .nav-links {
        display: none;
        flex-direction: column;
        width: 100%;
        gap: 0;
        margin: 0;
        background: #181c24;
        border-top: 1px solid #bfa046;
        overflow: hidden;
        max-height: 0;
        transition: max-height 0.35s cubic-bezier(0.4, 0, 0.2, 1);
        position: absolute;
        left: 0;
        top: 100%;
        z-index: 99;
      }

      .nav-links li {
        width: 100%;
        margin: 0;
        padding: 0;
      }

      .nav-links a {
        display: block;
        width: 100%;
        padding: 1rem 1.5rem 0.5rem 1.5rem;
        background: none;
        border: none;
        border-radius: 0;
      }

      .hamburger {
        display: flex;
      }

      #nav-toggle:checked ~ .nav-links {
        display: flex !important;
        max-height: 500px;
      }

      .nav-inner {
        position: relative;
      }

      .nav-title {
        margin-left: 1.5rem;
        font-size: 1.1rem;
      }

      #nav-toggle:checked + label.hamburger span:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
      }

      #nav-toggle:checked + label.hamburger span:nth-child(2) {
        opacity: 0;
      }

      #nav-toggle:checked + label.hamburger span:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
      }
    }

    .nav-link {
      color: #bfa046;
      text-decoration: none;
      margin: 0 1em;
      font-weight: bold;
      transition: color 0.2s;
    }

    .nav-link:hover {
      color: #fffbe6;
    }

    .nav-btn {
      color: #bfa046;
      font-weight: bold;
      text-decoration: none;
      padding: 0.5rem 1rem;
      border: 2px solid #bfa046;
      border-radius: 4px;
      transition: background 0.3s, color 0.3s;
    }

    .nav-btn:hover {
      background: #bfa046;
      color: #181c24;
    }

    /* ðŸŒˆ Dropdown Menu Styles */
    .dropdown {
      position: relative;
      display: inline-block;
    }

    .dropdown-menu {
      display: none;
      position: absolute;
      left: 0;
      top: 100%;
      background:
        linear-gradient(rgba(24,28,36,0.7), rgba(24,28,36,0.5)),
        url('/stone.png');
      background-size: 64px 64px;
      background-repeat: repeat;
      border: 2.5px solid #bfa046;
      border-radius: 0 0 12px 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.18);
      padding: 0.5rem 0;
      margin: 0;
      list-style: none;
      min-width: 220px;
    }

    .dropdown-menu li a {
      display: block;
      color: #bfa046; /* Gold text to match nav tabs */
      background: none;
      padding: 0.7rem 1.5rem;
      font-size: 1rem;
      border: none;
      border-radius: 0;
      text-align: left;
      text-decoration: none;
      font-family: 'Cinzel', serif;
      transition: background 0.15s, color 0.15s;
      position: relative;
    }

    .dropdown-menu li a:hover {
      background: #ffe28a;
      color: #bfa046;
    }

    .nav-links > li > a::before,
    .nav-links > li > a::after,
    .dropdown-menu li a::before,
    .dropdown-menu li a::after {
      /* ... */
    }

    /* Remove all ::before and ::after decorative corners */

    .dropdown > a {
      cursor: pointer;
      position: relative;
      user-select: none;
    }

    .dropdown-arrow {
      margin-left: 0.5em;
      font-size: 0.85em;
      transition: transform 0.2s;
      vertical-align: middle;
    }

    /* Rotate arrow when open */
    .dropdown.open > a .dropdown-arrow {
      transform: rotate(180deg);
    }

    .dropdown.open .dropdown-menu {
      display: block;
    }
  </style>

  <div class="nav-inner">
    <span class="nav-title">The Shattered Crown</span>
    <input type="checkbox" id="nav-toggle" style="display:none;" />
    <label for="nav-toggle" class="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </label>
    <ul class="nav-links" id="nav-menu">
      <li>
        <a href="/" class={pathname === "/" ? "active" : ""}>Home</a>
      </li>
      <li class="dropdown">
        <a href="/about" class={pathname.startsWith("/about") ? "active" : ""}>
          About <span class="dropdown-arrow">&#9662;</span>
        </a>
        <ul class="dropdown-menu">
          <li><a href="/lore">Our Story</a></li>
          <li><a href="/team">Meet the Team</a></li>
          <li><a href="/faq">FAQ</a></li>
        </ul>
      </li>
      <li>
        <a href="/rules" class={pathname.startsWith("/rules") ? "active" : ""}>Rules</a>
      </li>
      <li>
        <a href="/map" class={pathname.startsWith("/map") ? "active" : ""}>Map</a>
      </li>
      <li>
        <a href="/donate" class={pathname.startsWith("/donate") ? "active" : ""}>Donate</a>
      </li>
      <li>
        <a href="/contact" class={pathname.startsWith("/contact") ? "active" : ""}>Contact</a>
      </li>
    </ul>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dropdown = document.querySelector('.dropdown');
    if (!dropdown) return; // Exit if dropdown is not found

    const dropdownLink = dropdown.querySelector('a');
    if (!dropdownLink) return; // Exit if link is not found

    dropdownLink.addEventListener('click', function(e) {
      e.preventDefault();
      dropdown.classList.toggle('open');
    });

    // Optional: Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
      if (!(e.target instanceof Node) || !dropdown.contains(e.target)) {
        dropdown.classList.remove('open');
      }
    });
  });
</script>
