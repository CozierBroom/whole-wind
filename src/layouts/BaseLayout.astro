---
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from "@vercel/speed-insights/astro";
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.theshatteredcrown.net/" />
    <meta property="og:image" content="/your-og-image.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content="/your-og-image.png" />
    <link rel="canonical" href="https://www.theshatteredcrown.net/" />
  </head>
  <body style="min-height: 100vh; display: flex; flex-direction: column;">
    <NavBar />
    <div style="flex: 1 0 auto; display: flex; flex-direction: column;">


        
      <slot />
    </div>
    <Footer />
    <Analytics />
    <SpeedInsights />
  </body>
</html>